{
  "name": "@ppwcode/openapi",
  "version": "3.0.2",
  "description": "Collection of common OpenAPI 3 specs and Joi schemata",
  "author": {
    "name": "Jan Dockx",
    "email": "Jan_Dockx@peopleware.be"
  },
  "homepage": "https://bitbucket.org/ppwcode/openapi",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/ppwcode/openapi.git"
  },
  "bugs": {
    "url": "https://bitbucket.org/ppwcode/openapi/issues"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=15.5.1"
  },
  "devDependencies": {
    "@redocly/cli": "^1.0.0-beta.112",
    "cartesian": "^1.0.1",
    "directory-tree": "^3.3.2",
    "joi-to-json": "^3.1.1",
    "js-yaml": "^4.1.0",
    "mocha": "^10.1.0",
    "npm-check": "^6.0.1",
    "npm-watch": "^0.11.0",
    "nyc": "^15.1.0",
    "prettier-standard": "^16.4.1",
    "should": "^13.2.3"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "arrowParens": "avoid"
  },
  "standard": {
    "ignore": [
      "/scripts/common/"
    ]
  },
  "mocha": {
    "check-leaks": true,
    "forbid-only": true,
    "forbid-pending": true,
    "recursive": true,
    "extension": "test.js",
    "require": [
      "should",
      "./_util/_envMocha"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ],
    "exclude": [
      "_util/_*.js",
      "test/**"
    ]
  },
  "scripts": {
    "OpenAPI:lint": "redocly lint",
    "OpenAPI:serve": "redocly preview-docs index.yaml",
    "OpenAPI:watch": "npm-watch OpenAPI:lint",
    "schematatests": "nyc mocha \"test/{*,**/*}.test.js\"",
    "pretest": "npm-check -i \"\"; npm outdated || exit 0",
    "test": "npm run OpenAPI:lint && npm run schematatests"
  },
  "watch": {
    "OpenAPI:lint": {
      "patterns": ".",
      "extensions": "yaml",
      "ignore": ""
    }
  },
  "dependencies": {
    "@toryt/contracts-v": "^5.0.0",
    "joi": "^17.7.0"
  }
}
