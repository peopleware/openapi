{
  "name": "@ppwcode/openapi",
  "version": "7.0.1",
  "description": "Collection of common OpenAPI 3 specs and Joi schemata",
  "author": {
    "name": "Jan Dockx",
    "email": "Jan_Dockx@peopleware.be"
  },
  "homepage": "https://bitbucket.org/ppwcode/openapi",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/ppwcode/openapi.git"
  },
  "bugs": {
    "url": "https://bitbucket.org/ppwcode/openapi/issues"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=15.5.1"
  },
  "devDependencies": {
    "@redocly/cli": "^1.0.0-beta.122",
    "cartesian": "^1.0.1",
    "directory-tree": "^3.5.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "joi-to-json": "^3.1.2",
    "js-yaml": "^4.1.0",
    "mocha": "^10.2.0",
    "npm-check": "^6.0.1",
    "npm-watch": "^0.11.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.3",
    "should": "^13.2.3"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "standard": {
    "ignore": [
      "/scripts/common/"
    ]
  },
  "mocha": {
    "check-leaks": true,
    "forbid-only": true,
    "forbid-pending": true,
    "recursive": true,
    "extension": "test.js",
    "require": [
      "should",
      "./_util/_envMocha"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ],
    "exclude": [
      "_util/_*.js",
      "test/**"
    ]
  },
  "scripts": {
    "generateResources": "node scripts/joiToOpenAPI.js",
    "OpenAPI:lint": "npm run generateResources && redocly lint",
    "OpenAPI:watch": "npm-watch OpenAPI:lint",
    "OpenAPI:serve": "redocly preview-docs index.yaml --port=8084",
    "lint": "eslint '{!(.*|coverage|node_modules|scripts)/**,scripts}/*.js'",
    "schematatests": "npm run lint && nyc mocha \"test/{*,**/*}.test.js\"",
    "pretest": "npm-check -i \"\"; npm outdated || exit 0",
    "test": "npm run OpenAPI:lint && npm run schematatests",
    "preversion": "npm test",
    "prepack": "npm test"
  },
  "watch": {
    "OpenAPI:lint": {
      "patterns": ".",
      "extensions": "yaml,js",
      "ignore": [
        ".nyc_output",
        "_util",
        "coverage",
        "scripts",
        "test"
      ]
    }
  },
  "dependencies": {
    "@toryt/contracts-v": "^5.0.0",
    "joi": "^17.7.0"
  }
}
